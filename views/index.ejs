<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bún Bò Huế Bảng Đen</title>
    <script src="https://kit.fontawesome.com/ad778f42b3.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/index.css">
    <script src="https://apis.google.com/js/platform.js" async defer></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center">
                    <p class="h1">XIN KÍNH CHÀO QUÝ KHÁCH!</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-3">
                <div class="text-center">
                    <p>Vui lòng chọn:</p>
                    <hr class="text-primary">
                    <div class="d-flex flex-column">
                        <div class="border border-dark py-5 m-5 crs">
                            <i class="fa-solid fa-truck-fast fa-2xl text-success"></i>
                            <br>
                            <span class="d-block fw-larger">Ship đồ ăn</span>
                        </div>
                        <div class="border border-dark py-5 m-5 fw-larger crs">
                            <i class="fa-solid fa-pizza-slice fa-xl text-success"></i>
                            <br>
                            Xem thực đơn
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="text-center">
                    <img src="./images/bbh-layer.png" alt="logo" width="100%" class="img-thumbnail">
                    <p class="text-success fw-bold h3">ĐANG MỞ CỬA..</p>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="text-center">
                    <p>Vui lòng chọn:</p>
                    <hr class="text-primary">
                    <div class="d-flex flex-column">
                        <div class="border border-dark py-5 m-5 fw-larger crs" onclick="showLoginBox();">
                            <i class="fa-solid fa-unlock fa-xl text-success"></i>
                            <br>
                            Đăng nhập
                        </div>
                    </div>
                    <div class="d-flex flex-column">
                        <div class="border border-dark py-5 m-5 fw-larger crs">
                            <i class="fa-solid fa-location-dot fa-xl text-success"></i>
                            <br>
                            Xem vị trí
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('loginbox.ejs') %>
    <%- include('registerbox.ejs') %>
</body>
<script src="https://erukascholar.live/socket.io/socket.io.js"></script>
<script>
    var socket = io.connect('wss://erukascholar.live');
    socket.on('connect', function() {
      console.log('Connected to server');
    });
    socket.on('emitter', function(data) {
      console.log('emitter=',data);
    });

    $(document).ready(function(){
        /*...*/
    });
    function showLoginBox() {
        $("#loginBox").modal('toggle');
    }
</script>
</html>