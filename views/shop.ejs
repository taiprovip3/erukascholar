    }
    function renderDivFile(file) {
      const publishDate = new Date(file.publish_date);
      const formattedDate = `${publishDate.getDate()}/${publishDate.getMonth() + 1}/${publishDate.getFullYear()}`;
      return `
        <div data-post-id="${file.file_id}" class="p-1 col-4 file">
          <div class="p-3 borrow position-relative" style="background-image: url('/images/bright-sand-bg-2.png');">
            <div class="position-absolute top-0 start-0 p-1 w-100 d-flex justify-content-between">
              <div class="">
                #${file.file_id}
              </div>
              <div class="text-center" style="font-size: smaller;">
                <i class="fas fa-download d-block"></i>
                ${file.counter}
              </div>
            </div>
            <div class="text-center my-1">
              <span class="fw-bold">${file.file_name}</span>
              <br>
              <img src="/images/island-skyblock-server.png" alt="file" width="100%" height="100%" class="img-thumbnail"/>
            </div>
            <span class="d-block"><b>T√°c gi·∫£</b>: ${file.username}</span>
            <span class="d-block"><b>Ng√†y update</b>: ${formattedDate}</span>
            <span class="d-block"><b>Phi√™n b·∫£n g·ªëc</b>: ${file.version}</span>
            <span class="d-block"><b>M√¥ t·∫£</b>: ${file.des}</span>
            <div><b>Gi√°</b>: ${file.price < 10 ? '0' + file.price : file.price}ü•Æ</div>
            <div class="d-flex flex-wrap mt-2">
              <div class="col-6 p-1">
                <button class="btn btn-primary w-100" onclick="buyFile(${file.file_id});">Mua</button>
              </div>
              <div class="col-6 p-1">
                <button class="btn btn-light w-100" onclick="showDetailFile(${file.file_id});">Xem chi ti·∫øt</button>
              </div>
            </div>
