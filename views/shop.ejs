      `;
    }

    function sortFile(selectObject) {
      const fileContainer = document.getElementById('files')
      const fileDivs = Array.from(fileContainer.querySelectorAll('.file')) // L·∫•y t·∫•t c·∫£ c√°c div post con

      if (selectObject.value === 'NEWEST') {
        // S·∫Øp x·∫øp m·∫£ng c√°c div post theo id l·ªõn nh·∫•t ƒë·∫øn nh·ªè nh·∫•t
        fileDivs.sort((a, b) => {
          const idA = parseInt(a.getAttribute('data-post-id'))
          const idB = parseInt(b.getAttribute('data-post-id'))
          return idB - idA
        })
      } else if (selectObject.value === 'OLDEST') {
        // S·∫Øp x·∫øp m·∫£ng c√°c div post theo id nh·ªè nh·∫•t ƒë·∫øn l·ªõn nh·∫•t
        fileDivs.sort((a, b) => {
          const idA = parseInt(a.getAttribute('data-post-id'))
          const idB = parseInt(b.getAttribute('data-post-id'))
          return idA - idB
        })
      }

      // X√≥a n·ªôi dung c≈© trong #posts
      fileContainer.innerHTML = ''

      // Th√™m l·∫°i c√°c div post ƒë√£ ƒë∆∞·ª£c s·∫Øp x·∫øp v√†o #posts
      fileDivs.forEach((fileDiv) => {
        fileContainer.appendChild(fileDiv)
      })
    }

    function buyFile(fileId) {
      $.ajax({
        url: '/shop/buy-file',
        method: 'PUT',
        data: { fileId },
        success: (sweetResponse) => {
          swal({ 
            title: sweetResponse.title,
            text: sweetResponse.text,
            icon: sweetResponse.icon
          }).then(() => {
            if(sweetResponse.icon == 'success') {
              window.location.href = window.location.href;
            }
          });
        }, error: (error) => {
          console.error('error=', error);
          toastr.error(error.responseText, 'L·ªói');
        }
      });
    }
