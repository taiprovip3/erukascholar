  <body>
    <div class="container-fluid d-flex justify-content-center align-items-center overflow-auto">
      <div class="w-75 my-5 position-relative">
        <!-- nav -->
        <style>
          .dropdown {
            position: relative;
          }
          .dropdown_menu {
            display: none;
            position: absolute;
            left: 0;
            top: calc(100% - 1px);
            width: 200px;
            background-image: url('https://mineblocks.com/1/wiki/images/a/a7/Sand.png');
            background-repeat: no-repeat;
            background-size: cover;
          }
          .dropdown:hover > .dropdown_menu{
            z-index: 100;
            display: block;
          }
        </style>
        <div id="nav" class="d-flex align-items-center justify-content-between text-white p-2">
          <div>
            <ul class="nav nav-tabs">
              <li class="nav-item dropdown">
                <a class="nav-link fw-bold text-white" href="/">TRANG CHỦ</a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link fw-bold text-white disabled" href="#">HƯỚNG DẪN <i class="fa-solid fa-sort-down"></i></a>
                <ul class="nav nav-tabs dropdown_menu">
                  <li class="nav-item">
                    <a class="nav-link fw-bold text-dark" href="#">Cách tải Minecraft</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link fw-bold text-dark" href="#">Nạp tiền vào tài khoản </a>
                  </li>
                </ul>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link fw-bold active" href="#">SỰ KIỆN</a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link fw-bold text-white" href="#">CỬA HÀNG</a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link fw-bold text-white disabled" href="#">TÀI KHOẢN <i class="fa-solid fa-sort-down"></i></a>
                <ul class="nav nav-tabs dropdown_menu">
                  <li class="nav-item">
                    <a class="nav-link fw-bold text-dark" href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#loginBox">Đăng nhập thành viên</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link fw-bold text-dark" href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#registerBox">Đăng ký tài khoản</a>
                  </li>
                </ul>
              </li>
            </ul>
          </div>
          <div>
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS3Xf26G7yYwc9DojeXTNj4EEy30_lu_YM5kkXiXtQraRLj7u6N0RFMJRZDqjU9TRaHL6c&usqp=CAU" alt="logo" width="32px" height="32px" />
            <span>Minecraft Forum VN</span>
          </div>
        </div>
        <!-- content -->
        <div id="content" class="container-fluid">
          <div class="row">
            <!-- pleft -->
            <div class="col-9 px-4 pt-2 position-relative" id="pleft">
              
            </div>
            <!-- pright -->
            <div class="col-3 px-4 pt-2" id="pright">
              <!-- pright1 - text info -->
              <div id="pright1" class="text-center pt-1">
                <h5 class="text-white">Thông tin máy chủ</h5>
              </div>
              <!-- pright2 - counters -->
              <style>
                #counter {
                  background-image: url('https://static.vecteezy.com/system/resources/thumbnails/007/556/117/small_2x/pixel-background-games-concept-background-resizable-seamless-pattern-oak-plate-vector.jpg');
                  background-repeat: no-repeat;
                  background-size: cover;
                  width: 100%;
                  box-shadow: rgb(38, 57, 77) 0px 20px 30px -10px;
                }
              </style>
              <div class="text-center mt-4 py-3 fw-bold text-white position-relative d-flex align-items-center justify-content-center" id="counter">
                <div class="position-absolute start-0 text-center">
                  <img src="./images/now1.png" alt="emerald" width="40px" height="40px" />
                  <br>
                  <span class="small">Welcome</span>
                </div>
                <div class="text-center">
                  <span class="d-block">ĐANG MỞ</span>
                  <span class="d-block">0 / 1999</span>
                </div>
                <div class="position-absolute end-0 text-center">
                  <img src="./images/now1.png" alt="emerald" width="40px" height="40px" />
                  <br>
                  <span class="small">Welcome</span>
                </div>
              </div>
              <!-- pright3 - memberships -->
              <style>
                #membership {
                  background-image: url('https://static.vecteezy.com/system/resources/thumbnails/007/556/117/small_2x/pixel-background-games-concept-background-resizable-seamless-pattern-oak-plate-vector.jpg');
                  background-repeat: no-repeat;
                  background-size: cover;
                  width: 100%;
                  box-shadow: rgba(240, 46, 170, 0.4) 5px 5px, rgba(240, 46, 170, 0.3) 10px 10px, rgba(240, 46, 170, 0.2) 15px 15px, rgba(240, 46, 170, 0.1) 20px 20px, rgba(240, 46, 170, 0.05) 25px 25px;
                }
              </style>
              <div class="mt-4 text-center text-white p-1" id="membership">
                <img src="./images/steve-head.png" alt="steve-head" width="40" height="40" />
                <br>
                <span><span class="fw-bold text-decoration-underline">00</span> thành viên</span>
                <br>
                <span>đã tham gia</span>
                <hr class="text-white">
                <div class="text-start borrow fw-bolder">
                  <i class="fa-solid fa-earth-asia text-bg-light text-success"></i>
                  &emsp;IP:&emsp;<span>MYSERVER.COM</span>
                </div>
                <hr class="text-white">
                <div class="text-start borrow fw-bolder">
                  <i class="fa-solid fa-code-merge text-bg-light text-success"></i>
                  &emsp;Phiên bản:</span>
                  <ul>
                    <li>1.8+, 1.9+, 1.10+, 1.11+, 1.12+, 1.13+, 1.14+, 1.15+, 1.16+, 1.17+, 1.18+, 1.19+, 1.20+</li>
                  </ul>
                  <hr class="text-white">
                  <i class="fa-solid fa-code-fork text-bg-light text-success"></i>
                  &emsp;Phiên bản ổn định:</span>
                  <ul>  
                    <li>1.8.8, 1.12.2, 1.16.5 (*), 1.20.2</li>
                  </ul>
                </div>
              </div>
              <style>
                #types {
                  background-image: url('https://static.vecteezy.com/system/resources/thumbnails/007/556/117/small_2x/pixel-background-games-concept-background-resizable-seamless-pattern-oak-plate-vector.jpg');
                  background-repeat: no-repeat;
                  background-size: cover;
                  width: 100%;
                  box-shadow: rgba(240, 46, 170, 0.4) -5px 5px, rgba(240, 46, 170, 0.3) -10px 10px, rgba(240, 46, 170, 0.2) -15px 15px, rgba(240, 46, 170, 0.1) -20px 20px, rgba(240, 46, 170, 0.05) -25px 25px;
                }
                #title-types {
                  background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR1edov94Cdo8vZbaUlpcuRAkcR76tRLdT7ADz1EyHb3Wu7Ee0xiJ992jFJpGNaTapp7jQ&usqp=CAU');
                }
              </style>
              <!-- types -->
              <div class="mt-4 text-white p-1" id="types">
                <div class="text-center p-1" id="title-types">
                  <span class="fw-bolder text-white fw-bolder">Thông tin</span>&ensp;
                  <i class="fa-solid fa-circle-question"></i>
                </div>
                <span class="fw-bold">Cày cuốc <i class="fa-solid fa-sack-dollar text-info"></i></span>
                <span>
                  SkyBlock, Prison, Towny, Faction, OneBlock, SkyMine, Minelord,..
                </span>
                <span class="fw-bold">Minigames <i class="fa-solid fa-khanda violet"></i></span>
                <span>
                  Bedwars, Skywars, Eggwars, Onepiece,..
                </span>
              </div>
              <style>
                #postings {
                  background-image: url('https://static.vecteezy.com/system/resources/thumbnails/007/556/117/small_2x/pixel-background-games-concept-background-resizable-seamless-pattern-oak-plate-vector.jpg');
                  background-repeat: no-repeat;
                  background-size: cover;
                  width: 100%;
                  box-shadow: rgba(240, 46, 170, 0.4) 5px 5px, rgba(240, 46, 170, 0.3) 10px 10px, rgba(240, 46, 170, 0.2) 15px 15px, rgba(240, 46, 170, 0.1) 20px 20px, rgba(240, 46, 170, 0.05) 25px 25px;
                }
                #title-posting {
                  background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR1edov94Cdo8vZbaUlpcuRAkcR76tRLdT7ADz1EyHb3Wu7Ee0xiJ992jFJpGNaTapp7jQ&usqp=CAU');
                }
              </style>
              <!-- postings -->
              <div class="mt-4 text-white p-1" id="postings">
                <div class="text-center p-1" id="title-posting">
                  <span class="fw-bolder text-white fw-bolder">Bài viết</span>&ensp;
                  <i class="fa-solid fa-scroll"></i>
                </div>
                <ul class="nav flex-column">
                  <li class="nav-item border-bottom border-dark crs">
                    <a class="nav-link text-light fw-bolder" href="#">Sự kiện Black Friday giảm giá 49% tất cả máy chủ.</a>
                  </li>
                  <li class="nav-item border-bottom border-dark crs">
                    <a class="nav-link text-light fw-bolder" href="#">Hóa trang Halloween Dracula, Wibu, { CHO KẸO HAY BỊ ĐẬP BẦM DẬP }</a>
                  </li>
                  <li class="nav-item border-bottom border-dark crs">
                    <a class="nav-link text-light fw-bolder" href="#">Cập nhật danh sách member lỏ trong server.</a>
                  </li>
                  <li class="nav-item border-bottom border-dark crs">
                    <a class="nav-link text-light fw-bolder" href="#">PIRATES - SERVER MỚI CHÍNH THỨC RA MẮT T9</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="position-absolute bottom-0 end-0 text-center m-1 text-danger crs" data-bs-toggle="modal" data-bs-target="#reportBox">
          <i class="fa-solid fa-triangle-exclamation fa-lg"></i>
          <span>Report</span>
        </div>
      </div>
    </div>
    <%- include('login-box.ejs') %> <%- include('register-box.ejs') %> <%- include('profile-box.ejs') %> <%- include('report-box.ejs') %>
